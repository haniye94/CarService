<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header section with title -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!-- Trash Icon -->
        <ImageView
            android:id="@+id/icon_trash"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            />

        <!-- Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="ویرایش روغن موتور خودرو توتال مدل ..."
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <!-- Forward Arrow Icon -->
        <ImageView
            android:id="@+id/icon_forward"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
             />
    </RelativeLayout>

    <!-- Product Image -->
    <ImageView
        android:id="@+id/product_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitCenter"
         />

    <!-- Product Name -->
    <TextView
        android:id="@+id/product_name_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="نام محصول"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="روغن موتور خودرو توتال مدل Quartz 7000"
        android:padding="12dp"
        android:text="روغن موتور خودرو توتال مدل Quartz 7000"
        android:textColor="@android:color/black"
        android:inputType="text" />

    <!-- Product Price -->
    <TextView
        android:id="@+id/product_price_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="قیمت محصول"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="تومان"
        android:padding="12dp"
        android:text="۶۳،۰۰۰ تومان"
        android:textColor="@android:color/black"
        android:inputType="number" />

    <!-- Product Type and Brand -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <!-- Product Type -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product_type_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="نوع محصول"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/product_type_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="12dp" />
        </LinearLayout>

        <!-- Product Brand -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product_brand_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="برند محصول"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/product_brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="پاسخ"
                android:padding="12dp"
                android:textColor="@android:color/black"
                android:inputType="text" />
        </LinearLayout>
    </LinearLayout>

    <!-- Product Description -->
    <EditText
        android:id="@+id/product_description"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:hint="توضیحات"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:inputType="textMultiLine" />

    <!-- Update Button -->
    <Button
        android:id="@+id/update_product_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="به‌روزرسانی محصول"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

</LinearLayout>