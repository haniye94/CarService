<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/shap_simple_rec"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingRight="10dp"
    android:paddingBottom="20dp"
    android:textDirection="rtl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_name_customer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="محمود جعفری همدانی"
                android:textColor="@color/text_dark_gray"
                android:textSize="13dp" />

            <LinearLayout
                android:id="@+id/ly_km_now"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="کیلومتر فعلی:"
                    android:textColor="@color/text_dark_gray"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/txt_km_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10000"
                    android:textColor="@color/text_dark_gray"
                    android:textSize="13dp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/plaks"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:cropToPadding="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/plak" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"


                        android:gravity="center"

                        android:layoutDirection="ltr"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_plak_customer1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="17dp"
                            android:text="13"
                            android:textColor="@color/gray"
                            android:textSize="15dp"
                            android:layout_weight="0.5" />


                        <TextView
                            android:id="@+id/divid2"
                            android:layout_width="4dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp" />

                        <TextView
                            android:id="@+id/txt_plak_customer2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="ق"
                            android:textColor="@color/gray"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/divid3"
                            android:layout_width="4dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp" />

                        <TextView
                            android:id="@+id/txt_plak_customer3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="412"
                            android:textColor="@color/gray"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/divid4"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/txt_plak_customer4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_marginRight="6dp"
                            android:text="18"
                            android:textColor="@color/gray"
                            android:textSize="15dp" />
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ly_km_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="کیلومتر بعدی:"
                    android:textColor="@color/text_dark_gray"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/txt_km_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12000"
                    android:textColor="@color/text_dark_gray"
                    android:textSize="13dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_menu"
                android:layout_width="50dp"
                android:layout_height="55dp"
                android:elevation="5dp"
                android:paddingLeft="5dp"

                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="26dp"
                android:src="@drawable/ic_menu_dot" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="تاریخ:"
                android:textColor="@color/text_dark_gray"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/txt_date_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1400/8/8"
                android:textColor="@color/text_dark_gray"
                android:textDirection="rtl"
                android:textSize="13dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_name_car"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="خودرو 206"
            android:textColor="@color/text_dark_gray"
            android:textSize="13dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".1"
            android:orientation="vertical">

        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_service_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="ساعت:"
                android:textColor="@color/text_dark_gray"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/txt_time_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/text_dark_gray"
                android:textDirection="rtl"
                android:textSize="13dp" />

        </LinearLayout>


</LinearLayout>