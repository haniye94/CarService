<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:textDirection="rtl">

    <include layout="@layout/layout_action_bar_pages" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="64dp"
        android:background="@color/white"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:background="@drawable/shap_simple_rec"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/iran"
                    android:text="شارژ مانده"
                    android:layout_marginRight="16dp"
                    android:textColor="@color/text_low_dark"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/txt_charge_mande"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:gravity="center"
                    android:text="25000"
                    android:textColor="@color/text_low_dark"
                    android:textSize="24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="تومان"
                    android:textColor="@color/text_low_dark"
                    android:textSize="12dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/buycredit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/iran"
                android:gravity="center"
                android:layout_marginLeft="16dp"
                android:text="خرید شارژ پیامک"
                android:textColor="@color/button"
                android:textSize="14dp"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@color/white"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/shap_simple_rec"
            android:orientation="vertical"
            android:padding="20dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_service_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shap_simple"
                android:drawableLeft="@drawable/jahat_chap"
                android:drawableRight="@drawable/service_list"
                android:gravity="center|right"
                android:stateListAnimator="@null"
                android:text="     لیست گروه خدمات"
                android:textColor="@color/text_low_dark"
                android:textSize="14dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_introduce_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shap_simple"
                android:drawableLeft="@drawable/jahat_chap"
                android:drawableRight="@drawable/introduce_product"
                android:gravity="center|right"
                android:stateListAnimator="@null"
                android:text="     معرفی محصولات"
                android:textColor="@color/text_low_dark"
                android:textSize="14dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_my_product_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shap_simple"
                android:drawableLeft="@drawable/jahat_chap"
                android:drawableRight="@drawable/introduce_product"
                android:gravity="center|right"
                android:stateListAnimator="@null"
                android:text="     لیست کالای من"
                android:textColor="@color/text_low_dark"
                android:textSize="14dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_manage_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shap_simple"
                android:drawableLeft="@drawable/jahat_chap"
                android:drawableRight="@drawable/modiriat_payamak"
                android:gravity="center|right"
                android:stateListAnimator="@null"
                android:text="     مدیریت پیامک"
                android:textColor="@color/text_low_dark"
                android:textSize="14dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_msglog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shap_simple"
                android:drawableLeft="@drawable/jahat_chap"
                android:drawableRight="@drawable/modiriat_elanha"
                android:gravity="center|right"
                android:stateListAnimator="@null"
                android:text="     گزارش پیامک‌ها"
                android:textColor="@color/text_low_dark"
                android:textSize="14dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_bank_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shap_simple"
                android:drawableLeft="@drawable/jahat_chap"
                android:drawableRight="@drawable/bank_card"
                android:gravity="center|right"
                android:stateListAnimator="@null"
                android:text="     کارت های بانکی"
                android:textColor="@color/text_low_dark"
                android:textSize="14dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shap_simple"
                android:drawableLeft="@drawable/jahat_chap"
                android:drawableRight="@drawable/moarefi_be_hamkar"
                android:gravity="center|right"
                android:stateListAnimator="@null"
                android:text="     معرفی به همکاران"
                android:textColor="@color/text_low_dark"
                android:textSize="14dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_menage_notif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shap_simple"
                android:drawableLeft="@drawable/jahat_chap"
                android:drawableRight="@drawable/modiriat_elanha"
                android:gravity="center|right"
                android:stateListAnimator="@null"
                android:text="     مدیریت اعلان ها"
                android:textColor="@color/text_low_dark"
                android:textSize="14dp"
                android:visibility="gone" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>