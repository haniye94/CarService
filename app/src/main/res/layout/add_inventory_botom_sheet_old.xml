<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:padding="16dp">

    <View
        android:layout_width="36dp"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:background="@drawable/drag_handle_view" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_product"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:scaleType="centerInside"
            android:src="@drawable/noimage"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:lineSpacingExtra="6dp"
            android:fontFamily="@font/iran"
            android:gravity="start"
            android:maxWidth="200dp"
            android:text="SN 5W40 روغن موتور لوبریفنت"
            android:textDirection="rtl"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/img_product"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_edit"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layoutDirection="ltr"
            android:padding="8dp"
            android:src="@drawable/ic_edit"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/product_title"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- Input Fields Layout -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:paddingTop="16dp"
        android:rowCount="3">


        <com.google.android.material.textfield.TextInputLayout
            style="@style/edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginBottom="10dp"
            android:hint="موجودی انبار"
            app:boxStrokeColor="@color/mtrl_textinput_default_box_stroke_color"
            app:boxStrokeWidthFocused="1dp"
            app:hintTextColor="@color/text_gray"
            app:placeholderTextAppearance="@style/customFontStyle">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_inventory"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:inputType="number"
                android:maxLines="1"
                android:nextFocusForward="@+id/edt_last_name"
                android:paddingRight="40dp"
                android:singleLine="true"
                android:textColor="@color/text_dark"
                android:textSize="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginBottom="10dp"
            android:hint="قیمت فروش"
            app:boxStrokeColor="@color/mtrl_textinput_default_box_stroke_color"
            app:boxStrokeWidthFocused="1dp"
            app:hintTextColor="@color/text_gray"
            app:placeholderTextAppearance="@style/customFontStyle">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_real_price"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/iran"
                android:inputType="number"
                android:maxLines="1"
                android:nextFocusForward="@+id/edt_last_name"
                android:singleLine="true"
                android:textColor="@color/text_dark"
                android:textSize="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginBottom="10dp"
            android:hint="درصد تخفیف"
            app:boxStrokeColor="@color/mtrl_textinput_default_box_stroke_color"
            app:boxStrokeWidthFocused="1dp"
            app:hintTextColor="@color/text_gray"
            app:placeholderTextAppearance="@style/customFontStyle">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_amount_discount"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/iran"
                android:inputType="number"
                android:maxLength="2"
                android:maxLines="1"
                android:nextFocusForward="@+id/edt_last_name"
                android:paddingRight="40dp"
                android:singleLine="true"
                android:textColor="@color/text_dark"
                android:textSize="12dp" />
        </com.google.android.material.textfield.TextInputLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_packaging"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/iran"
                android:gravity="center"
                android:text="بسته بندی"
                android:textColor="@color/text_low_dark"
                android:textSize="11sp" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinner_packaging"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_spinner" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/iran"
                android:gravity="center"
                android:text="لیتراژ"
                android:textColor="@color/text_low_dark"
                android:textSize="11sp" />

            <Spinner
                android:id="@+id/spinner_amount"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_spinner" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_title_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/iran"
                    android:gravity="center"
                    android:text="قیمت فروش"
                    android:textColor="@color/text_orange"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/iran"
                    android:gravity="center"
                    android:text="تومان"
                    android:textColor="#262626"
                    android:textSize="12sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/txt_customer_price"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/iran"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/text_orange"
                android:textDirection="ltr"
                android:textSize="20sp" />
        </LinearLayout>

    </GridLayout>


    <!-- Buttons -->
    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="16dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_add"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/shap_button_blue"
            android:fontFamily="@font/iran"
            android:text="افزودن"
            android:textColor="@android:color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/shap_button_cancle"
            android:fontFamily="@font/iran"
            android:text="انصراف"
            android:textColor="@android:color/white" />

    </LinearLayout>
</LinearLayout>
