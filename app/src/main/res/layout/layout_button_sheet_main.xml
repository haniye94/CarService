<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_bottom_sheet_lang"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shap_button_sheet"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:textDirection="rtl">

    <TextView
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#EFEFEF"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="7dp"
            android:background="@drawable/ic_account" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_name_family"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:lineSpacingExtra="-0.1dp"
                    android:text="محمود جعفری همدانی"
                    android:textColor="@color/text_dark_gray"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/txt_car"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:lineSpacingExtra="-0.1dp"
                    android:text="خودرو 206"
                    android:textColor="@color/text_dark_gray"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_phone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:lineSpacingExtra="-0.1dp"
                    android:text="09180000000"
                    android:textColor="@color/text_dark_gray"
                    android:textSize="14dp" />

                <LinearLayout
                    android:id="@+id/plaks"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <include
                        android:id="@+id/ly_plk_general"
                        layout="@layout/item_plak_general" />

                    <include
                        android:id="@+id/ly_plk_taxi"
                        layout="@layout/item_plak_taxi"
                        android:visibility="gone" />

                    <include
                        android:id="@+id/ly_plk_edari"
                        layout="@layout/item_plak_edari"
                        android:visibility="gone" />

                    <include
                        android:id="@+id/ly_plk_entezami"
                        layout="@layout/item_plak_entezami"
                        android:visibility="gone" />

                    <include
                        android:id="@+id/ly_plk_malolin"
                        layout="@layout/item_plak_malolin"
                        android:visibility="gone" />


                    <include
                        android:id="@+id/ly_plk_azad_new"
                        layout="@layout/item_plak_azad_new"
                        android:visibility="gone" />

                    <include
                        android:id="@+id/ly_plk_azad_old"
                        layout="@layout/item_plak_azad_old"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:lineSpacingExtra="-0.1dp"
        android:text="اطلاعات مشتری با موفقیت ثبت شد"
        android:textColor="@color/text_low_gray"
        android:textSize="13dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:lineSpacingExtra="-0.1dp"
        android:text="شما می‌توانید برای مشتری کارت سرویس ثبت کنید"
        android:textColor="@color/text_low_gray"
        android:textSize="13dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_save_service"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/shap_button"
            android:lineSpacingExtra="-0.1dp"
            android:text="ثبت سرویس"
            android:stateListAnimator="@null"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cancle"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_marginRight="15dp"
            android:stateListAnimator="@null"
            android:background="@drawable/shap_button_gray"
            android:text="انصراف"
            android:textColor="@color/white"
            android:textSize="14dp" />
    </LinearLayout>
</LinearLayout>