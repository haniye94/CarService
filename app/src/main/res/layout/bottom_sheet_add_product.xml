<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shap_bottom_sheet"
    android:padding="16dp">

    <!-- Product Image (Optional) -->
    <ImageView
        android:id="@+id/product_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/products_banner_img"
        android:layout_gravity="center"/>

    <!-- Product Title -->
    <TextView
        android:id="@+id/product_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Product Title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center"/>

    <!-- Product Subtitle -->
    <TextView
        android:id="@+id/product_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Product Subtitle"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_gravity="center"/>

    <!-- Stock, Sale Price, Discount Fields -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <EditText
            android:id="@+id/stock_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="موجودی انبار" />

        <EditText
            android:id="@+id/sale_price_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="قیمت فروش" />

        <EditText
            android:id="@+id/discount_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="تخفیف فروش" />
    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <!-- Add Button -->
        <Button
            android:id="@+id/add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="افزودن"
            android:textColor="#FFFFFF"
            android:backgroundTint="@color/btn_back_blue" />

        <!-- Cancel Button -->
        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="انصراف"
            android:textColor="#FFFFFF"
            android:backgroundTint="#757575"
            android:layout_marginStart="16dp"/>
    </LinearLayout>
</LinearLayout>
